<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xbanner_details"
                android:layout_width="match_parent"
                android:layout_height="300dp"></com.stx.xhb.xbanner.XBanner>

            <TextView
                android:id="@+id/price_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="2222" />

            <TextView
                android:id="@+id/goodsname_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="shangp" />

            <WebView
                android:id="@+id/web_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></WebView>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_details"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/Mybackground"
        android:clickable="true"
        android:src="@drawable/add"
        app:borderWidth="0dp"
        app:rippleColor="@color/shipp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buy_details"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/Mybackground"
        android:clickable="true"
        android:src="@mipmap/buy"
        app:borderWidth="0dp"
        app:rippleColor="@color/shipp" />

</RelativeLayout>